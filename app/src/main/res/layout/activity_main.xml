<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/idTVSolution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/idTVResult"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="64sp" />

    <TextView
        android:id="@+id/idTVResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/idButton_layout"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="64sp" />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/idButton_layout"
       android:orientation="vertical"
       android:layout_alignParentBottom="true"
       android:paddingVertical="16dp"
       >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center"

           >
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:text="C"
               android:textSize="32dp"
               android:textColor="@color/white"
               android:id="@+id/idButton_C"
               android:layout_margin="12dp"
               android:backgroundTint="#F44336"

               />
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:textSize="32dp"
               android:textColor="@color/white"
               android:id="@+id/idButton_open_bracket"
               android:text="("
               android:layout_margin="12dp"
               />
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:text=")"
               android:textSize="32dp"
               android:textColor="@color/white"
               android:id="@+id/idButton_close_bracket"
               android:layout_margin="12dp"
               />
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:text="/"
               android:textSize="32dp"
               android:textColor="@color/white"
               android:backgroundTint="#FF5722"
               android:id="@+id/idButton_divide"
               android:layout_margin="12dp"
               />

       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center"

           >
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:text="7"
               android:textSize="32dp"
               android:textColor="@color/white"
               android:id="@+id/idButton_7"
               android:layout_margin="12dp"
               />
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:textSize="32dp"
               android:textColor="@color/white"
               android:id="@+id/idButton_8"
               android:text="8"
               android:layout_margin="12dp"
               />
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:text="9"
               android:textSize="32dp"
               android:textColor="@color/white"
               android:id="@+id/idButton_9"
               android:layout_margin="12dp"
               />
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:text="*"
               android:textSize="32dp"
               android:textColor="@color/white"
               android:backgroundTint="#FF5722"
               android:id="@+id/idButton_multiply"
               android:layout_margin="12dp"
               android:textAlignment="center"
               />

       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center"

           >
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:text="4"
               android:textSize="32dp"
               android:textColor="@color/white"
               android:id="@+id/idButton_4"
               android:layout_margin="12dp"
               />
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:textSize="32dp"
               android:textColor="@color/white"
               android:id="@+id/idButton_5"
               android:text="5"
               android:layout_margin="12dp"
               />
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:text="6"
               android:textSize="32dp"
               android:textColor="@color/white"
               android:id="@+id/idButton_6"
               android:layout_margin="12dp"
               />
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:text="-"
               android:textSize="32dp"
               android:textColor="@color/white"
               android:backgroundTint="#FF5722"
               android:id="@+id/idButton_minus"
               android:layout_margin="12dp"
               />

       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center"

           >
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:text="1"
               android:textSize="32dp"
               android:textColor="@color/white"
               android:id="@+id/idButton_1"
               android:layout_margin="12dp"
               />
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:textSize="32dp"
               android:textColor="@color/white"
               android:id="@+id/idButton_2"
               android:text="2"
               android:layout_margin="12dp"
               />
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:text="3"
               android:textSize="32dp"
               android:textColor="@color/white"
               android:id="@+id/idButton_3"
               android:layout_margin="12dp"
               />
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:text="+"
               android:textSize="32dp"
               android:textColor="@color/white"
               android:backgroundTint="#FF5722"
               android:id="@+id/idButton_add"
               android:layout_margin="12dp"
               />

       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center"

           >
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:text="AC"
               android:textSize="20sp"
               android:textColor="@color/white"
               android:id="@+id/idButton_AC"
               android:layout_margin="12dp"
               android:backgroundTint="#F44336"
               />
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:textSize="32dp"
               android:textColor="@color/white"
               android:id="@+id/idButton_0"
               android:text="0"
               android:layout_margin="12dp"
               />
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:text="."
               android:textSize="32dp"
               android:textColor="@color/white"
               android:id="@+id/idButton_decimal"
               android:layout_margin="12dp"
               />
           <com.google.android.material.button.MaterialButton
               android:layout_width="72dp"
               android:layout_height="72dp"
               app:cornerRadius="36dp"
               style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
               android:text="="
               android:textSize="32dp"
               android:textColor="@color/white"
               android:backgroundTint="#FF5722"
               android:id="@+id/idButton_equal"
               android:layout_margin="12dp"
               />

       </LinearLayout>


   </LinearLayout>


</RelativeLayout>